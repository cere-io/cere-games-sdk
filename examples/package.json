{
  "name": "@cere-games-sdk/examples",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run serve:sdk & npm run serve:games -- -o",
    "serve": "npm run serve:sdk & npm run serve:games -- --silent -p 8888",
    "serve:games": "npm run wait:sdk && http-server ./games",
    "serve:sdk": "npm run serve -w @cere/games-sdk -- --port 8889",
    "wait:sdk": "wait-on http-get://localhost:8889/bundle.umd.js"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "wait-on": "^7.0.1"
  }
}
